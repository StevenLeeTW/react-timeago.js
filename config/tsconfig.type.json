{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../",
    "rootDir": "../src",
    "outDir": "../type",
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["../src/**/*"],
  "exclude": ["../node_modules"]
}
